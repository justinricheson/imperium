        <activity android:name=".GetStatisticsActivity" android:label="System Statistics"/>
        <activity android:name=".LaunchAppsActivity" android:label="Launch Applications"/>
        <service android:name=".HeartbeatService" android:label="Heartbeat" android:exported="false"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
