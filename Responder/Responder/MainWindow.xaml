<Window x:Class="Responder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Icon="Res/icon.png">
    <Grid>
        
        <Button Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Start_Button_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Button_Click"/>
        <ToggleButton Content="Help" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="Help_Button_Click" Name="tbHelp"/>
        <ListBox Name="lb_status" Margin="10,37,10,10"/>

    </Grid>
</Window>
